
{
  "expo": {
    "name": "MidPoint",
    "slug": "midpoint",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/natively-dark.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/natively-dark.png",
      "resizeMode": "contain",
      "backgroundColor": "#3F51B5"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.midpoint.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "MidPoint needs your location to calculate meeting points with your friends.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "MidPoint needs your location to calculate meeting points with your friends."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/natively-dark.png",
        "backgroundColor": "#3F51B5"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.midpoint.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/images/final_quest_240x240.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      "expo-router",
      "expo-web-browser",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow MidPoint to use your location to calculate meeting points with your friends."
        }
      ]
    ],
    "scheme": "midpoint",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {}
    }
  }
}
